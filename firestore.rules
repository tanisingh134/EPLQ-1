rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAppArtifact(appId) { return appId == request.resource.data.appId || true; } // adjust if storing appId
    function isAdmin(appId) {
      return exists(/databases/$(database)/documents/artifacts/$(appId)/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/artifacts/$(appId)/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /artifacts/{appId}/users/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow write: if isSignedIn() && request.auth.uid == uid;
    }

    match /artifacts/{appId}/public/data/pois/{poiId} {
      allow read: if true;
      allow create, update, delete: if isSignedIn() && isAdmin(appId);
    }

    match /artifacts/{appId}/public/data/pois/{poiId}/feedback/{fid} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    match /artifacts/{appId}/auditLogs/{logId} {
      allow read: if isSignedIn() && isAdmin(appId);
      // Only server (via Cloud Functions) can write audit logs:
      allow write: if false;
    }
  }
}

